pipeline {
    agent any
    environment {
        GITHUB_CREDENTIALS = credentials('github-credentials')
    }
    stages {
        stage('Checkout') {
            steps {
                git(
                    url: 'https://github.com/yourusername/your-repo.git',
                    branch: 'main',
                    credentialsId: 'github-credentials'
                )
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
